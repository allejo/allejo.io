{% extends '_layouts/base.html.twig' %}

{% block body %}
    <aside class="c-sidebar u-background-dark">
        <div class="c-branding">
            <a href="{{ url(pages['Home']) }}" class="c-branding__logo">allejo</a>
        </div>

        <nav class="c-navigation">
            <ul class="u-list-inline">
                {% include '_includes/navigation.html.twig' %}
            </ul>
        </nav>

        <section>
            <ul class="c-social u-list-inline">
                {% include '_includes/social-media.html.twig' %}
            </ul>

            <p class="c-copyright">Copyright &copy; {{ 'now' | date('Y') }}</p>
        </section>
    </aside>

    <main class="c-page u-background-light">
        <span id="main-content"></span>

        <div class="c-page-header">
            <button class="c-hamburger c-hamburger--htx">
                <span></span>

                <span class="sr-only__text">toggle menu</span>
            </button>
        </div>

        <div class="c-print-header">
            <p class="c-print-header__title">allejo</p>
            <p class="c-print-header__slogan">A developer pretending to know what he's doing &bull; <a href="{{ site.url }}">{{ site.url }}</a></p>
        </div>

        {% block content %}{% endblock %}

        <footer class="c-site-footer">
            <ul class="u-list-inline">
                <li><a href="{{ url(pages['Contact']) }}">Contact</a></li>
                <li><a href="{{ url(pages['Support Me']) }}">Support Me</a></li>
            </ul>
        </footer>
    </main>
{% endblock %}
