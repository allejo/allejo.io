{% extends '_layouts/base.html.twig' %}

{% import '_layouts/utilities.html.twig' as utils %}

{% block appbody %}
    <aside class="c-sidebar">
        <div class="c-branding c-branding--xmas">
            <a href="{{ url('/') }}" class="c-branding__logo">allejo</a>
            {# <img src="{{ url('/assets/images/logo-hat-xmas.png') }}" class="c-branding__hat" aria-hidden="true" /> #}
        </div>

        <nav class="c-navigation">
            <ul class="u-list-inline">
                {{ utils.navigation() }}
            </ul>
        </nav>

        <section>
            <ul class="c-social u-list-inline">
                {{ utils.social() }}
            </ul>

            <p class="c-copyright">Copyright &copy; {{ 'now' | date('Y') }}</p>
        </section>
    </aside>

    <main class="c-page">
        <div class="c-page-header">
            <button class="c-hamburger c-hamburger--htx">
                <span></span>

                <p class="sr-only__text">toggle menu</p>
            </button>
        </div>

        <div class="c-print-header">
            <p class="c-print-header__title">allejo</p>
            <p class="c-print-header__slogan">A developer pretending to know what he's doing &bull; <a href="{{ site.url }}">{{ site.url }}</a></p>
        </div>

        {% block content %}{% endblock %}

        <footer class="c-site-footer">
            <ul class="u-list-inline">
                <li><a href="{{ url('/contact/') }}">Contact</a></li>
                <li><a href="{{ url('/about/') }}#how-to-support-me">Support Me</a></li>
            </ul>
        </footer>
    </main>
{% endblock %}

{% block javascript %}
