{% extends '@theme/layouts/page.html.twig' %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Hind:300,400,700|Montserrat" rel="stylesheet">
{% endblock %}

{% block sidebar %}
    <div class="c-branding">
        <a href="{{ url('/') }}" class="c-branding__logo">allejo</a>
    </div>

    <nav class="c-navigation">
        <ul class="u-list-inline">
            {% for item in menu | order('nav') %}
                <li>
                    <a href="{{ url(item.url) }}">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>

    <footer>
        <ul class="c-social u-list-inline">
            {% for site in data.social %}
                <li>
                    <a href="{{ site.url }}" title="{{ site.slug }}">
                        <i class="fa fa-{{ site.logo }}">
                            <span class="sr-only">{{ site.slug }}</span>
                        </i>
                    </a>
                </li>
            {% endfor %}
        </ul>

        <p class="c-copyright">Copyright &copy; {{ 'now' | date('Y') }}</p>
    </footer>
{% endblock %}

{% block body %}
    <div class="c-page-header">
        <button class="c-hamburger c-hamburger--htx">
            <span></span>

            <p class="sr-only__text">toggle menu</p>
        </button>
    </div>

    {% block content %}{% endblock %}
{% endblock %}

{% block javascript %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-59480871-1', 'auto');
        ga('send', 'pageview');
    </script>
{% endblock %}
