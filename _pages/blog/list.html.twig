{% extends '_layouts/page.html.twig' %}

{% block body %}
    {% for post in collections.posts | order('date', 'DESC') %}
        <article class="c-blog-post">
            <header class="c-blog-post__header">
                <h1>{{ post.title }}</h1>
                <p>{{ post.date | date('M d, Y') }}</p>
            </header>

            <section class="c-blog-post__body">
                {{ post.content | summary }}
            </section>
        </article>
    {% endfor %}
{% endblock %}
