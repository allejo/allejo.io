permalink: /blog/%title/
collection: posts
---

{% extends '_layouts/page.html.twig' %}

{% from '_macros/blog-post.html.twig' import blog_post %}

{% set pageWideCSS = 's-blog-view' %}
{% set opengraph = {
    'og:type': 'article',
    'og:title': this.title,
    'og:description': this.content | summary | striptags | truncate(200)
} %}

{% block content %}
    {{ blog_post(this, false) }}
{% endblock %}
